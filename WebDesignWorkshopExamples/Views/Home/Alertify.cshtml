<body>
    <br /><br /><br />
    <div class="container">
        <div class="col-md-3 text-center">
            <br />
            <button type="button" class="btn btn-default" onclick="alert('Traditional Alert Box');">Default Alert</button>
            <br /><br />
            <button type="button" class="btn btn-success" onclick="alertify.alert('Custom Alert Box', 'This is a custom animated alert box.');">Custom Alert</button>
            <br />
        </div>
        <div class="col-md-3 text-center">
            <br />
            <button type="button" class="btn btn-default" onclick="confirm('Are you sure?');">Confirm</button>
            <br /><br />
            <button type="button" class="btn btn-warning" onclick="alertify.confirm('Confirm', 'Are you sure?', function () { }, function () { })">Custom Confirm</button>
            <br />
            @*<button type="button" class="btn btn-warning" onclick="alertify.alert('Custom Alert Box', 'This is a custom animated alert box.');">Custom Confirm With Custom Buttons</button>
            <br />*@
        </div>
        <div class="col-md-3 text-center">
            <br />
            <button type="button" class="btn btn-default" onclick="prompt('Enter Your Name');">Prompt Dialog</button>
            <br /><br />
            <button type="button" class="btn btn-primary" id="alertify-prompt-btn">Custom Prompt Dialog</button>
            <br />
        </div>
        <div class="col-md-3 text-center">
            <br />
            <button type="button" class="btn btn-success" onclick="alertify.success('Successfully Logged Out');">Success Notify</button>
            <br /><br />
            <button type="button" class="btn btn-danger" onclick="alertify.error('There were some errors on this page.');">Error Notify</button>
            <br />
        </div>
        <div class="clearfix"></div>
        <div class="col-md-offset-2 col-md-8">
            <br /><br />
            <div class="btn-group-sm">
                <button type="button" data-apalert data-cls="default" data-txt="Default Alert Message" class="btn btn-sm btn-default">Default</button>
                <button type="button" data-apalert data-cls="primary" data-txt="Primary Alert Message" class="btn btn-sm btn-primary">Primary</button>
                <button type="button" data-apalert data-cls="success" data-txt="Success Alert Message" class="btn btn-sm btn-success">Success</button>
                <button type="button" data-apalert data-cls="info" data-txt="Information Alert Message" class="btn btn-sm btn-info">Information</button>
                <button type="button" data-apalert data-cls="warning" data-txt="Warning Alert Message" class="btn btn-sm btn-warning">Warning</button>
                <button type="button" data-apalert data-cls="danger" data-txt="Error Alert Message" class="btn btn-sm btn-danger">Error</button>
            </div>
            <br />
        </div>
        <div class="clearfix"></div>
    </div>
    <br /><br />
