    <script src="~/libs/bootstrap3.3.7/js/bootstrap.min.js"></script>
    <script src="~/libs/cbm.js"></script>
    <script type="text/javascript">
        $(function () {
            $('[data-apalert]').click(function (e) {
                var t = $(this).data('txt');
                var c = $(this).data('cls');

                APCustomModal({
                    title: 'Alert',
                    headerClass: c,
                    body: t,
                    rightBtn1: 'OK',
                    rightBtn1Class: c,
                    rightBtn1Callback: undefined,
                    escClose: true,
                    outsideClickClose: false
                });
            });

            $('#alertify-prompt-btn').click(function (e) {
                alertify.prompt("Custom Prompt", "This is custom animated prompt dialog", 'Enter Your Name', function (e, v) {
                    apSuccessAlert('You have entered "'+v+'".', 'Hi : ' + v);
                    }, function () {
                        apErrorAlert('You entered Cancel', 'Cancel');
                    });
            });

            function apSuccessAlert(error, title, okCallback) {
                title = title ? title : 'Alert';
                okCallback ? okCallback : undefined;
                APCustomModal({
                    title: title,
                    headerClass: 'success',
                    body: error,
                    rightBtn1: 'OK',
                    rightBtn1Class: 'success',
                    rightBtn1Callback: okCallback,
                    escClose: true,
                    outsideClickClose: true
                });
            }
            function apErrorAlert(error, title, okCallback) {
                title = title ? title : 'Alert';
                okCallback ? okCallback : undefined;
                APCustomModal({
                    title: title,
                    headerClass: 'danger',
                    body: error,
                    rightBtn1: 'OK',
                    rightBtn1Class: 'danger',
                    rightBtn1Callback: okCallback,
                    escClose: true,
                    outsideClickClose: true
                });
            }

        });
