@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HtmlForm</title>
    <link href="~/libs/bootstrap3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/libs/animate.css" rel="stylesheet" />
</head>
<body style="background:#d4d4d4; font-size: 16px; font-family: Verdana;">
    <br /><br />
    <div class="container">
        <form>
            <div class="col-sm-offset-3 col-sm-6 animated flipInX" style="background: #fff; padding: 30px;">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                        <input type="text" class="form-control" placeholder="Your Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        <input type="text" class="form-control" placeholder="Your Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
                        <input type="password" class="form-control" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-phone"></span>
                        </span>
                        <input type="text" class="form-control" placeholder="Your Mobile" />
                    </div>
                </div>
                <div class="form-group">
                    <label>
                        <input type="radio" class="" name="gender" /> Male
                    </label>
                    <label>
                        <input type="radio" class="" name="gender" /> Female
                    </label>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Select Course</option>
                        <option>B.Tech</option>
                        <option>M.Tech</option>
                        <option>B.Pharma</option>
                        <option>BCA</option>
                        <option>MCA</option>
                        <option>Polytechnic</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        <input type="checkbox" class="" name="fp" /> Full Payment
                    </label>
                </div>
                <hr />
                <div class="form-group">
                    <button type="reset" class="btn btn-danger pull-left">
                        <i class="glyphicon glyphicon-refresh"></i> Reset Form
                    </button>
                    <button type="reset" class="btn btn-success pull-right">
                        <i class="glyphicon glyphicon-check"></i> Save Data
                    </button>
                </div>
                <div class="clearfix"></div>
                <hr />
            </div>
        </form>
    </div>
    <br /><br />
    <ul id="nav-btns" type="none">
        <li>
            <a href="/home/htmltags" class="btn btn-primary">HTML Tags</a>
        </li>
        <li>
            <a href="/home/htmlform" class="btn btn-warning">HTML Form</a>
        </li>
        <li>
            <a href="/home/AudioVideo" class="btn btn-success">Audio & Video</a>
        </li>
        <li>
            <a href="/home/CssStyle" class="btn btn-info">CSS Style</a>
        </li>
        <li>
            <a href="/home/JavaScript" class="btn btn-danger">JavaScript</a>
        </li>
        <li>
            <a href="/home/checkallcssformat" class="btn btn-warning">CSS Formating and Check All Example</a>
        </li>
        <li>
            <a href="/home/Alertify" class="btn btn-success">Custom Alerts</a>
        </li>
        <li>
            <a href="/home/TraditionalWebsite" class="btn btn-default">Traditional Website</a>
        </li>
    </ul>
    <style type="text/css">
        #nav-btns {
            list-style-type: none;
        }

            #nav-btns li {
                float: left;
                margin-right: 10px;
                margin-bottom: 10px;
            }

                #nav-btns li a {
                    border-radius: 0;
                }
    </style>
    <br /><br>
</body>
</html>
